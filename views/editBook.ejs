<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <h2>Edit Book</h2>

  <div class="create-blog content">
    <form action="/books/edit/<%= book._id %>" method="POST">
      <label for="title">Title:</label>
      <input type="text" value="<%= book.title %>" id="title" name="title" required>
      
      <label for="author">Author:</label>
      <input type="text" value="<%= book.author %>" id="author" name="author" required>
      
      <label for="isbn">ISBN:</label>
      <input type="text" value="<%= book.isbn %>" id="isbn" name="isbn">
      
      <label for="genre">Genre:</label>
      <input type="text" value="<%= book.genre %>" id="genre" name="genre">
      
      <label for="publishedYear">Published Year:</label>
      <input type="number" value="<%= book.publishedYear %>" id="publishedYear" name="publishedYear">
      
      <label for="copies">Copies:</label>
      <input type="number" value="<%= book.copies %>" id="copies" name="copies">

      <button type="submit">Update Book</button>
    </form>
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>