<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="details content">
    <h1>Book Details:</h1>
    <h2><%= book.title %></h2>
    <div class="content">
      <p><span>Author:</span><%= book.author.name %></p>
      <p><span>ISBN:</span><%= book.isbn %></p>
      <p><span>Genre:</span><%= book.genre %></p>
      <p><span>Published Year:</span><%= book.publishedYear %></p>
      <p><span>Copies Available:</span><%= book.availableCopies %></p>
    </div>
  </div>


 <div class="operation-btn">
   <br>
   <form action="/books/delete/<%= book._id %>" method="post">
    <button type="submit" >Remove</button>
  </form>
   <form action="/books/edit/<%= book._id %>" method="get">
    <button type="submit">Updates</button>
  </form>
 </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>